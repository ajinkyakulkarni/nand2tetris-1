#!/bin/bash

set -e

blue='\033[1;34m'
nocolor='\033[0m'

cd $(dirname "${0}")

for testfile in $(find * -name '*.tst'); do
    printf "${blue}â†’${nocolor} Test $testfile\n"

    if [ $testfile = "fill/Fill.tst" ]; then
        printf "Skip - Requires GUI\n"
        continue
    fi

    testfilebase="${testfile%.*}"
    Assembler.sh "$testfilebase".asm
    CPUEmulator.sh "$testfile"
done
